{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="text-center m-2 p-2">Utilisateur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ecole</th>
                <th>Axe</th>
                <th>Email</th>
                <th>Roles</th>
                {# <th>Password</th> #}
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.axe.ecole }}</td>
                <td>{{ user.axe }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {# <td>{{ user.password }}</td> #}
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.telephone }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="text-warning">Modifier</a>
                    {{ include('user/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="text-warning">Retour à la liste</a>

{% endblock %}
